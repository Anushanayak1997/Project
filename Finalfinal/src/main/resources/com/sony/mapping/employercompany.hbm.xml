<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.sony.model.entity.EmployerCompanyEntity" table="EMP_COMPANY">
		<meta attribute="class-description">
			This class contains the user detail.
		</meta>

		<id name="Id" type="int" column="id">
			<generator class="native" >
			<param name="sequence">EMP_COMPANY_ID_SEQ</param>
			</generator>		
		</id>

		<property name="userId" column="user_id" type="int" />
		<property name="companyId" column="company_id" type="int" />

	</class>

</hibernate-mapping>