<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sony.entities.Employees" table="EMPLOYEE">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>

			<id name="companyId" type="int" column="companyId">
				<generator class="native" />
			</id>

			<!-- <list name="listCertificates" cascade="all"> <key column="employee_id" 
				/> <list-index column="idx" base="0" /> <one-to-many class="com.sony.entities.Certificates" 
				/> </list> -->

			<property name="companyName" column="companyName" type="string" />
			<property name="companyDescription" column="companyDescription" type="string" />
			<property name="establishmentYear" column="establishmentYear" type="string" />
			<property name="websiteUrl" column="websiteUrl" type="string" />
			<property name="headquarter" column="headquarter" type="string" />
			<property name="specialities" column="specialities" type="string" />
			<property name="industry" column="industry" type="string" />
			<property name="type" column="type" type="string" />

			<!-- <many-to-one name="address" column="address" class="com.sony.entities.Address" not-null="true" /> -->
	</class>

</hibernate-mapping>